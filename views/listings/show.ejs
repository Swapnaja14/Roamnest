<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <div class="col-9 offset-3">
        <h3>Listing Details</h3>
    </div>
    <div class="card col-lg-5 col-md-6 col-sm-6 offset-3 show-card">
        <img 
        src="<%= listing.image.url %>" 
        class="card-img-top show-img" 
        alt="<%= listing.image.filename %>">
        
        <div class="card-body">
        <p class="card-text">
                <b><%= listing.title %></b><br>
                <%= listing.description %><br>
                &#8377; <%= listing.price.toLocaleString("en-IN") %><br>
                <%= listing.location %><br>  
                <%= listing.country %>
        </p>
        </div>
    </div>

    <br><br>

    <div class="btns mb-5">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark offset-3 edit-btn">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark offset-5 delete-btn">Delete</button>
        </form>
        </div>
</ div>